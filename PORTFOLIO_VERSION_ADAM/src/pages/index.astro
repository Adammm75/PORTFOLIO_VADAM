---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/skills'
import Expertise from '@/components/react/expertise'
import ContactForm from '@/components/react/contact-form'
import Parcours from '@/components/react/parcours'

import { buttonVariants } from '@/components/ui/button'
import Logo from '@/components/ui/logo'
import Layout from '@/layouts/Layout.astro'
import { SITE } from '@/consts'
const currentUrl = Astro.url;
---

<Layout canonicalUrl={currentUrl}>
  <PageHead slot="head" title="Junior Full Stack Developer" />
  <section class="flex flex-col gap-y-12 px-4 py-8 sm:px-8 lg:px-16 relative overflow-hidden">
    <!-- Animations de fond accentuées et élégantes -->
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      <!-- Particules jaunes flottantes plus visibles -->
      <div class="absolute top-20 left-10 w-3 h-3 bg-yellow-400/35 rounded-full animate-float-slow shadow-lg shadow-yellow-400/20"></div>
      <div class="absolute top-40 right-20 w-2 h-2 bg-yellow-400/40 rounded-full animate-float-medium shadow-md shadow-yellow-400/25"></div>
      <div class="absolute bottom-40 left-1/4 w-2.5 h-2.5 bg-yellow-400/30 rounded-full animate-float-fast shadow-lg shadow-yellow-400/15"></div>
      <div class="absolute bottom-20 right-1/3 w-3 h-3 bg-yellow-400/35 rounded-full animate-bounce-slow shadow-md shadow-yellow-400/20"></div>
      <div class="absolute top-60 left-1/3 w-2 h-2 bg-amber-400/30 rounded-full animate-float-medium shadow-lg shadow-amber-400/20"></div>
      <div class="absolute bottom-60 right-1/4 w-2.5 h-2.5 bg-yellow-300/35 rounded-full animate-bounce-slow shadow-md shadow-yellow-300/25"></div>
      
      <!-- Formes géométriques plus accentuées -->
      <div class="absolute top-1/4 right-1/4 w-10 h-10 border-2 border-yellow-400/20 rotate-45 animate-rotate-slow shadow-lg shadow-yellow-400/10"></div>
      <div class="absolute bottom-1/3 left-1/4 w-8 h-8 border-2 border-yellow-400/18 rounded-full animate-pulse-slow shadow-md shadow-yellow-400/15"></div>
      <div class="absolute top-1/3 right-1/6 w-6 h-6 border border-amber-400/25 rotate-12 animate-rotate-slow shadow-lg shadow-amber-400/10"></div>
      <div class="absolute bottom-1/6 left-1/3 w-4 h-4 border border-yellow-300/20 rounded-full animate-pulse-slow"></div>
      
      <!-- Lignes ondulantes plus visibles -->
      <svg class="absolute top-0 left-0 w-full h-full opacity-10" preserveAspectRatio="none" viewBox="0 0 1200 800">
        <path d="M0,400 Q300,350 600,400 T1200,400" stroke="rgb(252, 211, 77)" stroke-width="2" fill="none" class="animate-pulse-ultra-slow" />
        <path d="M0,500 Q400,450 800,500 T1200,500" stroke="rgb(245, 158, 11)" stroke-width="1" fill="none" class="animate-pulse-ultra-slow" style="animation-delay: 2s;" />
      </svg>
      
      <!-- Gradients radiaux améliorés -->
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-radial from-yellow-400/12 via-yellow-400/6 to-transparent rounded-full animate-pulse-ultra-slow"></div>
      <div class="absolute top-1/4 left-1/4 w-48 h-48 bg-gradient-radial from-amber-400/8 via-amber-400/3 to-transparent rounded-full animate-pulse-ultra-slow" style="animation-delay: 3s;"></div>
      
      <!-- Étoiles scintillantes plus visibles -->
      <div class="absolute top-16 right-16 w-1.5 h-1.5 bg-yellow-400/50 rounded-full animate-twinkle shadow-lg shadow-yellow-400/30"></div>
      <div class="absolute top-32 left-32 w-1.5 h-1.5 bg-yellow-400/45 rounded-full animate-twinkle shadow-md shadow-yellow-400/25" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 right-32 w-1.5 h-1.5 bg-yellow-400/40 rounded-full animate-twinkle shadow-lg shadow-yellow-400/20" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-16 left-16 w-1.5 h-1.5 bg-yellow-400/45 rounded-full animate-twinkle shadow-md shadow-yellow-400/25" style="animation-delay: 3s;"></div>
      <div class="absolute top-48 right-48 w-1 h-1 bg-amber-400/40 rounded-full animate-twinkle shadow-sm shadow-amber-400/20" style="animation-delay: 4s;"></div>
      <div class="absolute bottom-48 left-48 w-1 h-1 bg-yellow-300/35 rounded-full animate-twinkle shadow-sm shadow-yellow-300/15" style="animation-delay: 5s;"></div>
      
      <!-- Effets de lueur plus prononcés -->
      <div class="absolute top-1/3 right-1/6 w-40 h-40 bg-gradient-radial from-yellow-400/15 to-transparent rounded-full animate-pulse-ultra-slow"></div>
      <div class="absolute bottom-1/3 left-1/6 w-32 h-32 bg-gradient-radial from-amber-400/12 to-transparent rounded-full animate-pulse-ultra-slow" style="animation-delay: 2s;"></div>
      
      <!-- Symboles tech plus accentués -->
      <div class="absolute top-1/4 left-1/6 text-yellow-400/30 text-2xl animate-float-slow drop-shadow-lg">&lt;/&gt;</div>
      <div class="absolute bottom-1/4 right-1/5 text-yellow-400/25 text-xl animate-float-medium drop-shadow-md">{ }</div>
      <div class="absolute top-2/3 left-1/3 text-yellow-400/35 text-lg animate-bounce-slow drop-shadow-lg">⚡</div>
      <div class="absolute top-1/5 right-1/3 text-yellow-400/20 text-lg animate-pulse-slow drop-shadow-md">◇</div>
      <div class="absolute bottom-1/5 left-1/5 text-yellow-400/28 text-xl animate-twinkle drop-shadow-lg">★</div>
      <div class="absolute top-3/5 right-1/6 text-yellow-400/32 text-base animate-float-fast drop-shadow-md">→</div>
      <div class="absolute top-1/8 left-2/3 text-amber-400/25 text-lg animate-float-slow drop-shadow-md">⟨⟩</div>
      <div class="absolute bottom-1/8 right-2/3 text-yellow-300/30 text-base animate-bounce-slow drop-shadow-sm">◦</div>
      
      <!-- Petits symboles géométriques améliorés -->
      <div class="absolute top-1/6 left-1/2 w-2 h-8 bg-yellow-400/20 transform rotate-45 animate-pulse-ultra-slow shadow-md shadow-yellow-400/10"></div>
      <div class="absolute bottom-1/6 right-1/2 w-8 h-2 bg-yellow-400/18 animate-float-slow shadow-sm shadow-yellow-400/10"></div>
      <div class="absolute top-1/2 left-1/8 w-4 h-4 border-2 border-yellow-400/25 rotate-45 animate-rotate-slow shadow-md shadow-yellow-400/15"></div>
      <div class="absolute bottom-1/2 right-1/8 w-3 h-3 border border-amber-400/20 animate-pulse-slow"></div>
      
      <!-- Symboles supplémentaires tech accentués -->
      <div class="absolute top-1/8 right-1/8 text-yellow-400/25 text-xl animate-twinkle drop-shadow-md">●</div>
      <div class="absolute bottom-1/8 left-1/8 text-yellow-400/28 text-base animate-float-medium drop-shadow-sm">▲</div>
      <div class="absolute top-5/6 right-2/3 text-yellow-400/22 text-xl animate-pulse-slow drop-shadow-md">◉</div>
      <div class="absolute top-3/4 left-3/4 text-amber-400/20 text-sm animate-twinkle drop-shadow-sm">✦</div>
      <div class="absolute bottom-3/4 right-3/4 text-yellow-300/25 text-base animate-float-fast drop-shadow-md">◈</div>
      <div class="absolute top-1/3 right-1/8 text-yellow-400/16 text-xs animate-bounce-slow">∆</div>
      <div class="absolute bottom-2/5 left-2/3 text-yellow-400/13 text-base animate-float-fast">◈</div>
      <div class="absolute top-4/5 left-3/4 text-yellow-400/11 text-sm animate-twinkle">⬢</div>
      
      <!-- Éléments de code supplémentaires -->
      <div class="absolute top-3/4 right-1/4 text-yellow-400/9 text-xs animate-float-slow">( )</div>
      <div class="absolute bottom-3/4 left-3/5 text-yellow-400/15 text-sm animate-pulse-ultra-slow">[ ]</div>
      <div class="absolute top-1/7 left-2/3 text-yellow-400/12 text-base animate-float-medium">;</div>
      <div class="absolute bottom-1/7 right-1/7 text-yellow-400/10 text-lg animate-bounce-slow">∞</div>
      
      <!-- Formes géométriques minimalistes -->
      <div class="absolute top-2/5 left-1/7 w-2 h-2 bg-yellow-400/8 rounded-full animate-pulse-slow"></div>
      <div class="absolute bottom-2/5 right-2/5 w-4 h-0.5 bg-yellow-400/6 animate-float-fast"></div>
      <div class="absolute top-1/9 left-4/5 w-1.5 h-1.5 border border-yellow-400/9 animate-rotate-slow"></div>
      
      <!-- Éléments plus présents et stylés -->
      <div class="absolute top-1/3 left-3/4 text-yellow-400/20 text-2xl font-bold animate-pulse-slow">AI</div>
      <div class="absolute bottom-1/3 right-1/8 text-yellow-400/25 text-xl animate-float-medium">λ</div>
      <div class="absolute top-1/5 left-1/4 text-yellow-400/22 text-lg animate-twinkle">⟨⟩</div>
      <div class="absolute bottom-1/4 left-1/2 text-yellow-400/18 text-xl animate-bounce-slow">⊕</div>
      
      <!-- Lignes connectées stylées -->
      <div class="absolute top-1/4 left-1/3 w-16 h-0.5 bg-gradient-to-r from-yellow-400/15 to-transparent animate-pulse-ultra-slow"></div>
      <div class="absolute bottom-1/3 right-1/4 w-12 h-0.5 bg-gradient-to-l from-yellow-400/12 to-transparent animate-float-slow"></div>
      <div class="absolute top-3/5 left-1/6 w-0.5 h-12 bg-gradient-to-b from-yellow-400/10 to-transparent animate-pulse-slow"></div>
      
      <!-- Cercles concentriques -->
      <div class="absolute top-1/6 right-1/3 w-8 h-8 border border-yellow-400/15 rounded-full animate-pulse-slow">
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-4 h-4 border border-yellow-400/10 rounded-full animate-pulse-slow" style="animation-delay: 0.5s;"></div>
      </div>
      
      <!-- Symboles tech avancés -->
      <div class="absolute bottom-1/6 left-2/3 text-yellow-400/20 text-base animate-float-fast">⌘</div>
      <div class="absolute top-2/3 right-1/4 text-yellow-400/17 text-lg animate-twinkle">℧</div>
      <div class="absolute top-1/2 right-1/5 text-yellow-400/19 text-base animate-bounce-slow">⊗</div>
      
      <!-- Hexagone stylé -->
      <div class="absolute bottom-2/3 right-1/6 w-6 h-6 border border-yellow-400/16 transform rotate-30 animate-rotate-slow" style="clip-path: polygon(50% 0%, 93.3% 25%, 93.3% 75%, 50% 100%, 6.7% 75%, 6.7% 25%);"></div>
      
      <!-- Éléments valorisants supplémentaires -->
      <div class="absolute top-1/8 left-1/2 text-yellow-400/30 text-3xl font-extrabold animate-pulse-slow">⟨/⟩</div>
      <div class="absolute bottom-1/8 right-1/2 text-yellow-400/28 text-2xl animate-float-medium">◊◊◊</div>
      <div class="absolute top-2/5 right-1/3 text-yellow-400/26 text-xl animate-twinkle">▣▢▣</div>
      
      <!-- Constellation de points connectés -->
      <div class="absolute top-3/4 left-1/4">
        <div class="relative">
          <div class="w-2 h-2 bg-yellow-400/20 rounded-full animate-pulse-slow"></div>
          <div class="absolute top-4 left-6 w-1.5 h-1.5 bg-yellow-400/15 rounded-full animate-twinkle"></div>
          <div class="absolute -top-2 left-8 w-1 h-1 bg-yellow-400/18 rounded-full animate-float-fast"></div>
          <div class="absolute top-0 left-4 w-8 h-0.5 bg-yellow-400/8 transform rotate-12"></div>
          <div class="absolute top-2 left-0 w-6 h-0.5 bg-yellow-400/6 transform -rotate-45"></div>
        </div>
      </div>
      
      <!-- Grille circuit élégante -->
      <div class="absolute top-1/2 left-2/3 w-16 h-16 opacity-15">
        <svg viewBox="0 0 64 64" class="w-full h-full animate-pulse-ultra-slow">
          <defs>
            <pattern id="circuit" x="0" y="0" width="8" height="8" patternUnits="userSpaceOnUse">
              <path d="M0,4 L8,4 M4,0 L4,8" stroke="rgb(252, 211, 77)" stroke-width="0.5" fill="none"/>
              <circle cx="4" cy="4" r="1" fill="rgb(252, 211, 77)"/>
            </pattern>
          </defs>
          <rect width="64" height="64" fill="url(#circuit)"/>
        </svg>
      </div>
      
      <!-- Symboles algorithmiques -->
      <div class="absolute bottom-1/5 right-1/3 text-yellow-400/24 text-lg animate-bounce-slow">∑∏∫</div>
      <div class="absolute top-4/5 right-1/5 text-yellow-400/22 text-base animate-float-slow">∈∋∀</div>
      <div class="absolute top-1/4 right-2/3 text-yellow-400/20 text-xl animate-pulse-slow">∇∆∂</div>
      
      <!-- Effet radar sophistiqué -->
      <div class="absolute bottom-1/4 right-2/5 w-12 h-12">
        <div class="absolute inset-0 border border-yellow-400/12 rounded-full animate-ping"></div>
        <div class="absolute inset-2 border border-yellow-400/15 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
        <div class="absolute inset-4 bg-yellow-400/8 rounded-full animate-twinkle" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Motifs géométriques avancés -->
      <div class="absolute top-1/7 left-1/3 text-yellow-400/18 text-2xl animate-rotate-slow">⬟</div>
      <div class="absolute bottom-1/7 left-3/4 text-yellow-400/21 text-lg animate-float-medium">⬠⬡⬢</div>
      
      <!-- Lignes de force -->
      <div class="absolute top-2/3 left-1/8 w-20 h-0.5 bg-gradient-to-r from-yellow-400/20 via-yellow-400/10 to-transparent transform rotate-12 animate-pulse-ultra-slow"></div>
      <div class="absolute bottom-2/3 right-1/8 w-16 h-0.5 bg-gradient-to-l from-yellow-400/18 via-yellow-400/8 to-transparent transform -rotate-12 animate-float-slow"></div>
    </div>
    <div
      class="flex flex-col items-center text-center sm:flex-row sm:items-start sm:gap-8 sm:text-left relative z-10"
    >
      <div class="relative sm:shrink-0">
        <!-- Éléments d'interface graphique animés -->
        <div class="absolute inset-0 pointer-events-none">
          <!-- Lignes géométriques animées -->
          <div class="absolute top-1/4 -left-12 w-16 h-0.5 bg-gradient-to-r from-transparent via-yellow-400/50 to-transparent animate-pulse"></div>
          <div class="absolute top-3/4 -right-12 w-20 h-0.5 bg-gradient-to-r from-transparent via-amber-500/40 to-transparent animate-pulse delay-1000"></div>
          <div class="absolute left-1/4 -top-12 w-0.5 h-16 bg-gradient-to-b from-transparent via-yellow-300/50 to-transparent animate-pulse delay-500"></div>
          <div class="absolute right-1/4 -bottom-12 w-0.5 h-20 bg-gradient-to-b from-transparent via-yellow-500/40 to-transparent animate-pulse delay-700"></div>
          
          
          <!-- Éléments de circuit stylisés -->
          <div class="absolute bottom-8 -left-6">
            <svg width="32" height="32" viewBox="0 0 32 32" class="text-yellow-400/40 animate-pulse">
              <path d="M8 8L24 8M24 8L24 24M24 24L8 24" stroke="currentColor" stroke-width="1" fill="none"/>
              <circle cx="8" cy="8" r="2" fill="currentColor"/>
              <circle cx="24" cy="8" r="2" fill="currentColor"/>
              <circle cx="24" cy="24" r="2" fill="currentColor"/>
              <circle cx="8" cy="24" r="2" fill="currentColor"/>
            </svg>
          </div>
          
          
          <!-- Effet de grille subtile -->
          <div class="absolute inset-0 opacity-20">
            <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 2px 2px, rgb(252, 211, 77) 1px, transparent 0); background-size: 20px 20px;"></div>
          </div>
        </div>
        
        <!-- Photo principale avec cercle jaune -->
        <div class="relative p-1 rounded-full bg-gradient-to-br from-yellow-300 via-yellow-400 to-amber-500 shadow-lg">
          <!-- Fond blanc derrière la tête -->
          <div class="absolute inset-0 rounded-full">
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[85%] h-[85%] bg-white rounded-full opacity-90 z-0"></div>
          </div>
          <Logo
            className="h-36 w-36 object-cover sm:h-44 sm:w-44 md:h-52 md:w-52 lg:h-60 lg:w-60 rounded-full relative z-10"
          />
          
          <!-- Effet de lueur externe -->
          <div class="absolute inset-0 rounded-full bg-yellow-400/20 blur-xl scale-110 animate-pulse"></div>
          
          <!-- Curseur personnalisé de l'utilisateur -->
          <div class="absolute -bottom-2 -right-4 z-30 pointer-events-none animate-bounce transform -rotate-12" style="animation-duration: 2s;">
            <img 
              src="/static/cursor.png" 
              alt="Curseur personnalisé" 
              class="w-20 h-20 drop-shadow-2xl transform transition-transform duration-300 hover:scale-110"
              style="
                image-rendering: pixelated; 
                image-rendering: -moz-crisp-edges; 
                image-rendering: crisp-edges;
                filter: contrast(1.1) brightness(1.05) saturate(1.1);
                image-rendering: optimizeQuality;
              "
              onerror="this.style.display='none'; console.log('Erreur chargement curseur');"
              onload="console.log('Curseur chargé avec succès');"
            />
          </div>
        </div>
      </div>
      <div class="mt-8 sm:mt-0 sm:max-w-xl">
        <h1
          class="font-custom text-start text-4xl font-light sm:text-5xl"
          style="color: #FCD34D;"
        >
          {SITE.title}
        </h1>
        <div class="mt-4 relative z-20 w-full">
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-semibold text-white text-start tracking-tight leading-none flex items-center gap-2 relative"
            style="
              font-family: system-ui, -apple-system, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif; 
              font-weight: 600; 
              letter-spacing: -0.025em; 
              line-height: 1.0;
              text-shadow: 0 0 30px rgba(255, 255, 255, 0.15);
              font-feature-settings: 'kern' 1;
              -webkit-font-smoothing: antialiased;
              -moz-osx-font-smoothing: grayscale;
              text-rendering: optimizeLegibility;
              display: flex !important;
              visibility: visible !important;
              opacity: 1 !important;
              flex-wrap: nowrap !important;
            "
          >
            <span class="whitespace-nowrap">Développeur</span>
            <span class="whitespace-nowrap">IA</span>
          </h2>
        </div>
        <p class="text-lg text-foreground mt-4 text-start font-light tracking-wide leading-relaxed" style="font-family: system-ui, -apple-system, 'Segoe UI', sans-serif; letter-spacing: 0.025em;" title="description" aria-label="description" set:html={SITE.description}>
        </p>
        <div class="mt-6 flex items-center gap-6">
          <a
            href="https://www.linkedin.com/in/mekkiou-a-b64021262/"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#1a1a1a] p-3 rounded-lg hover:bg-[#2a2a2a] transition-all duration-300"
          >
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a
            href="https://github.com/Adammm75"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#1a1a1a] p-3 rounded-lg hover:bg-[#2a2a2a] transition-all duration-300"
          >
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a
            href="mailto:adam.mekkiou@outlook.fr"
            class="bg-[#1a1a1a] p-3 rounded-lg hover:bg-[#2a2a2a] transition-all duration-300"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <section class="relative" aria-labelledby="skills-title">

      <div>
        <Skills client:load />
      </div>
    </section>

    <!-- Séparation horizontale entre technologies et expertise -->
    <div class="w-full h-1 bg-gradient-to-r from-transparent via-foreground/30 to-transparent my-20"></div>

    <section class="relative" aria-labelledby="expertise-title">
      <h2
        id="expertise-title"
        class="font-custom text-white text-4xl font-bold mb-8"
        title="expertise"
        aria-label="expertise"
        role="heading"
      >
        Compétences & Expertise
      </h2>
      <p class="text-white text-lg mb-12" aria-label="expertise description">
        Découvrez mes domaines d'expertise et mes compétences techniques organisées par spécialité.
      </p>
      <div>
        <Expertise client:load />
      </div>
    </section>

    <!-- Séparation horizontale -->
    <div class="w-full h-0.5 bg-gradient-to-r from-transparent via-foreground/20 to-transparent my-16"></div>

    <!-- Section Parcours -->
    <Parcours client:load />

    <!-- Séparation horizontale -->
    <div class="w-full h-0.5 bg-gradient-to-r from-transparent via-foreground/20 to-transparent my-16"></div>

    <section id="contact" class="relative" aria-labelledby="contact-title">
      <h2
        id="contact-title"
        class="font-custom text-white text-4xl font-bold mb-8"
        title="contact"
        aria-label="contact"
        role="heading"
